{
  "manifest_version": 3,
  "name": "NotebookLM Reading List",
  "version": "1.0.0",
  "description": "Efficiently manage and browse your NotebookLM notebooks with audio summaries",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://notebooklm.google/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*", "https://notebooklm.google/*"],
      "js": ["src/content/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://notebooklm.google.com/*", "https://notebooklm.google/*"],
      "js": ["src/content/notebook-iframe.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "NotebookLM Reading Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}